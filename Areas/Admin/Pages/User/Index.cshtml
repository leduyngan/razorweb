@page
@using XTL.Helper
@model App.Admin.User.IndexModel
@{
    ViewData["Title"] = "Danh sách các Thành viên";
}
<h2>@ViewData["Title"]</h2>
<partial name="_StatusMessage" , model="@Model.StatusMessage"></partial>
<p>Tổng số thành viên: @Model.totalUsers</p>
<table class="table">
    <tr>
        <th>Tên user</th>
        <th>Vai trò (role)</th>
        <th>Tác vụ</th>
    </tr>
    @foreach (var user in Model.users)
    {
        <tr>
            <td>@user.UserName</td>
            <td>
                @if (string.IsNullOrEmpty(user.RoleNames))
                {
                    <a class="text-dark" asp-page="./AddRole" asp-route-id="@user.Id">+ thêm</a>
                }
                else
                {
                    <a asp-page="./AddRole" asp-route-id="@user.Id">@user.RoleNames</a>
                }
            </td>


            <td>
                <a class="btn btn-info btn-sm" asp-page="./SetPassword" asp-route-id="@user.Id">Đặt mật khẩu</a>

            </td>
        </tr>
    }
</table>

@{
    var pagingmodel = new PagingModel()
    {
        currentpage = Model.currentPage,
        countpage = Model.countPage,
        generateUrl = (int? p) => @Url.Page("./Index", new { p = p })
    };
}
<partial name="_PagingXTL" model="@pagingmodel"></partial>